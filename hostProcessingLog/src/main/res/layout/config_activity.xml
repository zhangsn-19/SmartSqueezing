<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <com.huawei.utility.TouchEventSwitchLayout
        android:id="@+id/configEditLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <EditText
            android:id="@+id/configEdit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />
    </com.huawei.utility.TouchEventSwitchLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/configEditable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑" >
        </Button>

        <Button
            android:id="@+id/configResetFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置" >
        </Button>

        <Button
            android:id="@+id/configSaveFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存" >
        </Button>

        <Button
            android:id="@+id/funcRebootPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重启" >
        </Button>

        <Button
            android:id="@+id/funcRebootDaemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重启Daemon" >
        </Button>
    </LinearLayout>

</LinearLayout>